# Staging Environment Configuration
# DICOM Viewer Application

# Application Environment
NODE_ENV=staging
PORT=3001

# Database Configuration
DB_HOST=staging-database
DB_PORT=5432
DB_NAME=dicom_viewer_staging
DB_USER=dicom_staging_user
DB_PASSWORD=staging_password_123
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://staging-redis:6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_TIMEOUT=5000

# Security Configuration
JWT_SECRET=staging_jwt_secret_change_me
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10
SESSION_SECRET=staging_session_secret_change_me
CORS_ORIGIN=http://localhost:3000,http://staging.your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=200

# File Upload Configuration
MAX_FILE_SIZE=100mb
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=.dcm,.dicom,.jpg,.jpeg,.png,.pdf
MAX_FILES_PER_UPLOAD=50

# DICOM Processing Configuration
DICOM_CACHE_SIZE=500
DICOM_CACHE_TTL=1800
ENABLE_DICOM_COMPRESSION=true
DICOM_QUALITY=80
THUMBNAIL_SIZE=256

# Performance Configuration
CACHE_PATH=/app/cache
CACHE_SIZE_LIMIT=2gb
ENABLE_GZIP=true
ENABLE_CLUSTERING=false
WORKER_PROCESSES=1

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9464
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
ENABLE_REQUEST_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# External Services
PACS_SERVER_URL=staging-pacs.your-domain.com
PACS_AE_TITLE=DICOM_VIEWER_STAGING
PACS_PORT=11112
ENABLE_PACS_INTEGRATION=true

# AI/ML Configuration
AI_SERVICE_URL=http://staging-ai-service:8080
AI_API_KEY=staging_ai_key
ENABLE_AI_FEATURES=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Email Configuration (for notifications)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=staging_smtp_user
SMTP_PASS=staging_smtp_pass
FROM_EMAIL=staging@your-domain.com

# Audit Configuration
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=/app/logs/audit.log
AUDIT_RETENTION_DAYS=90

# Feature Flags
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_MEASUREMENTS=true
ENABLE_3D_RENDERING=true
ENABLE_AI_ANNOTATIONS=true
ENABLE_MOBILE_SUPPORT=true

# Development/Debug
DEBUG=true
ENABLE_CORS=true
TRUST_PROXY=true

# Testing Configuration
ENABLE_TEST_DATA=true
MOCK_EXTERNAL_SERVICES=false
TEST_USER_EMAIL=test@your-domain.com
TEST_USER_PASSWORD=test123