# Production Environment Configuration for DICOM Radiology Application

# Application Environment
REACT_APP_ENV=production

# API Configuration - Update these URLs for your production environment
REACT_APP_API_URL=https://your-api-domain.com
REACT_APP_WS_URL=wss://your-api-domain.com

# DICOM Services Configuration - Update for production DICOM servers
REACT_APP_DICOM_WEB_URL=https://your-dicom-server.com/dicomweb
REACT_APP_WADO_RS_URL=https://your-dicom-server.com/dicomweb
REACT_APP_QIDO_RS_URL=https://your-dicom-server.com/dicomweb
REACT_APP_STOW_RS_URL=https://your-dicom-server.com/dicomweb

# Orthanc Configuration - Update for production Orthanc server
REACT_APP_ORTHANC_URL=https://your-orthanc-server.com

# AI Services Configuration - Update for production AI services
REACT_APP_AI_SERVICE_URL=https://your-ai-service.com
REACT_APP_AI_ENHANCEMENT_ENABLED=true

# Collaboration Services - Update for production collaboration server
REACT_APP_COLLABORATION_URL=https://your-collaboration-server.com
REACT_APP_COLLABORATION_ENABLED=true

# Feature Flags - Configure based on production requirements
REACT_APP_ENABLE_AI_ASSIST=true
REACT_APP_ENABLE_REALTIME_BILLING=true
REACT_APP_ENABLE_WORKFLOW_TIMER=true
REACT_APP_ENABLE_3D_NAVIGATION=true
REACT_APP_ENABLE_ADVANCED_TOOLS=true
REACT_APP_ENABLE_STRUCTURED_REPORTING=true

# Security Configuration - Enable authentication in production
REACT_APP_AUTH_ENABLED=true
REACT_APP_JWT_SECRET_KEY=your-production-jwt-secret-key

# Performance Configuration - Optimized for production
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_CACHE_SIZE_MB=1024
REACT_APP_MAX_CONCURRENT_REQUESTS=20

# Production Settings - Disable debug features
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=warn
REACT_APP_ENABLE_REMOTE_LOGGING=true
REACT_APP_LOG_ENDPOINT=https://your-logging-service.com/api/logs

# Network Configuration - Production timeouts and retry settings
REACT_APP_REQUEST_TIMEOUT=60000
REACT_APP_RETRY_ATTEMPTS=5
REACT_APP_ENABLE_OFFLINE_MODE=true

# Build Configuration - Optimized for production
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true