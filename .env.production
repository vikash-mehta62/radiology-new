# Production Environment Configuration
# DICOM Viewer Application

# Application Environment
NODE_ENV=production
PORT=3001

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=dicom_viewer
DB_USER=dicom_user
DB_PASSWORD=secure_password_123
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=5000

# Security Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here_change_in_production
CORS_ORIGIN=http://localhost,https://your-domain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=100mb
UPLOAD_PATH=/app/uploads
ALLOWED_FILE_TYPES=.dcm,.dicom,.jpg,.jpeg,.png,.pdf
MAX_FILES_PER_UPLOAD=50

# DICOM Processing Configuration
DICOM_CACHE_SIZE=1000
DICOM_CACHE_TTL=3600
ENABLE_DICOM_COMPRESSION=true
DICOM_QUALITY=85
THUMBNAIL_SIZE=256

# Performance Configuration
CACHE_PATH=/app/cache
CACHE_SIZE_LIMIT=5gb
ENABLE_GZIP=true
ENABLE_CLUSTERING=true
WORKER_PROCESSES=auto

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9464
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
ENABLE_REQUEST_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# External Services
PACS_SERVER_URL=
PACS_AE_TITLE=DICOM_VIEWER
PACS_PORT=11112
ENABLE_PACS_INTEGRATION=false

# AI/ML Configuration
AI_SERVICE_URL=
AI_API_KEY=
ENABLE_AI_FEATURES=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@your-domain.com

# Audit Configuration
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_PATH=/app/logs/audit.log
AUDIT_RETENTION_DAYS=365

# Feature Flags
ENABLE_REAL_TIME_COLLABORATION=false
ENABLE_ADVANCED_MEASUREMENTS=true
ENABLE_3D_RENDERING=true
ENABLE_AI_ANNOTATIONS=false
ENABLE_MOBILE_SUPPORT=true

# Development/Debug (should be false in production)
DEBUG=false
ENABLE_CORS=true
TRUST_PROXY=true