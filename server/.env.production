# Production Server Configuration
NODE_ENV=production
PORT=8000

# Database
MONGODB_URI=mongodb://mongodb-cluster:27017/kiro_radiology_prod
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true,"maxPoolSize":10}

# Security
JWT_SECRET=your-super-secure-jwt-secret-here
CORS_ORIGIN=https://app.kiro-radiology.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
UPLOAD_DIR=/var/uploads/dicom
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=.dcm,.dicom

# WebSocket
WS_PORT=8080
WS_HEARTBEAT_INTERVAL=30000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Performance
CLUSTER_MODE=true
WORKER_PROCESSES=4
MEMORY_LIMIT=2048MB

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000